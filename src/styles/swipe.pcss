.swipe-wrapper {
  position: relative;
  overflow: hidden;
  display: block;
}
.swipe-wrapper .opacity-transition {
  transition: opacity 0.25s linear;
}
.swipe-wrapper .swipe-content {
  position: relative;
  width: 100%;
  height: 100%;
  transition: transform 0.25s ease-in-out;
  webkit-transition: transform 0.25s ease-in-out;
}
.swipe-wrapper .swipe-content.moving {
  transition: none;
  -webkit-transition: none;
}
.swipe-wrapper .swipe-content.swipeable-color {
  background-color: none;
}
.swipe-wrapper .option {
  position: absolute;
  display: none;
  height: 100%;
  width: 100%;
  top: 0;
}
.swipe-wrapper .option .option-item {
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  width: 100%;
  height: 100%;
  color: #fff;
  padding: 5px;
}
.swipe-wrapper .option .option-item i {
  font-size: 35px;
  margin: 0 10px;
}
.swipe-wrapper .option.right {
  background-color: #FFC107;
}
.swipe-wrapper .option.right .option-item {
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}
.swipe-wrapper .option.left {
  background-color: #4CAF50;
}
.swipe-wrapper .option.left .option-item {
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
}
